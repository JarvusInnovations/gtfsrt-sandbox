{
  "name": "GTFS-RT Sandbox",
	"image": "mcr.microsoft.com/devcontainers/base:jammy",

  "features": {
		"ghcr.io/devcontainers/features/python:1": {
      "version": "3.12",
      "installJupyterlab": true
    },
    "ghcr.io/devcontainers-extra/features/uv:1": {},
    "ghcr.io/eitsupi/devcontainer-features/duckdb-cli:1": {}
  },

  "postCreateCommand": "uv sync && uv run dbt deps && uv run python scripts/download_data.py --defaults && duckdb -c 'INSTALL ui FROM core_nightly;'",

  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.terminal.activateEnvironment": true,
        "[sql]": {
          "editor.defaultFormatter": "mtxr.sqltools"
        }
      },
      "extensions": [
        "ms-python.python",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-sqlite",
        "evidence.sqltools-duckdb-driver",
        "innoverio.vscode-dbt-power-user",
        "bastienboutonnet.vscode-dbt"
      ]
    }
  },

  "forwardPorts": [],

  "remoteEnv": {
    "DBT_PROFILES_DIR": "${containerWorkspaceFolder}"
  }
}
